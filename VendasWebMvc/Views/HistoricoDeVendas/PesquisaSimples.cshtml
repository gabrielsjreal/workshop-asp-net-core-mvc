@model IEnumerable<VendasWebMvc.Models.HistoricoDeVenda>

@{
    ViewData["Title"] = "Pesquisa Simples - Vendas";
}


<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="dataInicial">Min Data</label>
                    <input type="date" class="form-control" name="dataInicial" value=@ViewData["DataInicial"] />
                </div>
                <div class="form-group">
                    <label for="dataFinal">Max Data</label>
                    <input type="date" class="form-control" name="dataFinal" value=@ViewData["DataFinal"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</nav>


<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="form-horizontal" asp-action="PesquisaVendedor">
            <div class="form-group">
                <div class="form-group">
                    <label for="status">Procurar Vendedor</label>
                    <input type="text" class="form-control" name="vendedor" value=@ViewData["Vendedor"] />
                </div>

            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</nav>



<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de Vendas = @Model.Sum(obj => obj.Valor).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedor.Departamento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendedor.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendedor.Departamento.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

